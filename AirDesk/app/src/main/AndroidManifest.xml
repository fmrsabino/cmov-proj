<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.cmov.airdesk" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/airdesk"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WorkspaceList"
            android:label="@string/title_activity_workspace_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.ulisboa.tecnico.cmov.airdesk.MainActivity" />
        </activity>
        <activity
            android:name=".CreateWorkspaceActivity"
            android:label="@string/title_activity_workspace_list"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".BrowseWorkspace"
            android:label="@string/title_activity_browse_workspace"
            android:parentActivityName=".WorkspaceList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.ulisboa.tecnico.cmov.airdesk.WorkspaceList" />
        </activity>
        <activity
            android:name=".FileManagerTestActivity"
            android:label="@string/title_activity_file_manager_test"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>
